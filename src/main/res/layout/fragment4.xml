<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/f4linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/f4image_Phone"
            android:layout_marginTop="20dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ya"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ach"/>

        <ImageView
            android:id="@+id/f4_imageQQ"
            android:layout_marginTop="20dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/a_y" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ach"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/f4linear_touni"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/f4image_touxiang"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/f4text_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多登录方式  >"/>

        <RadioGroup
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/shoucang"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/shoucang"
                android:text="收藏"/>

            <RadioButton
                android:id="@+id/f4_radioNight"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/yejian"
                android:text="夜间"/>

            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/like_icon"
                android:text="点赞"/>
        </RadioGroup>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#DFE1E1"
        ></View>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息通知"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#DFE1E1"
            ></View>

        <TextView
            android:layout_marginTop="7dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头条商城"/>

        <TextView
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东特供"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#DFE1E1"
            ></View>

        <TextView
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要爆料"/>

        <TextView
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户反馈"/>

        <TextView
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"/>

    </LinearLayout>




</LinearLayout>