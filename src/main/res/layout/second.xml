<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio_group">

        <RadioButton
            android:checked="true"
            android:textSize="11sp"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/image1"
            android:id="@+id/radio_shouye"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="8dp"
            android:text="首页"/>

        <RadioButton
            android:textSize="11sp"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/image2"
            android:id="@+id/radio_shipin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="8dp"
            android:text="视频"/>

        <RadioButton
            android:textSize="11sp"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/image3"
            android:id="@+id/radio_guanzhu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="8dp"
            android:text="微头条"/>

        <RadioButton
            android:textSize="11sp"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/image4"
            android:id="@+id/radio_denglu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:button="@null"
            android:padding="8dp"
            android:text="登录"/>

    </RadioGroup>
</LinearLayout>
